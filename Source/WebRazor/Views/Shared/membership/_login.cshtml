<div class="modal-box-content">
    <div class="box">
        <form class="openid form" action="@Url.OpenId()" method="post">
        <div>
            <ul>
                <li class="openid" title="@Resources.Site.OpenId">
                    <img src="@Url.OpenIdIcon("openidW")" alt="@Resources.Site.OpenId" />
                    <span><strong>http://{your-openid-url}</strong></span> </li>
                <li class="direct" title="@Resources.Site.OpenIdGoogle">
                    <img src="@Url.OpenIdIcon("googleW")" alt="@Resources.Site.OpenIdGoogle" /><span>https://www.google.com/accounts/o8/id</span>
                </li>
                <li class="direct" title="@Resources.Site.OpenIdYahoo">
                    <img src="@Url.OpenIdIcon("yahooW")" alt="@Resources.Site.OpenIdYahoo" /><span>http://yahoo.com/</span>
                </li>
                <li class="username" title="@Resources.Site.OpenIdUsernameAOL">
                    <img src="@Url.OpenIdIcon("aolW")" alt="@Resources.Site.OpenIdAOL" /><span>http://openid.aol.com/<strong>username</strong></span>
                </li>
            </ul>
            <br class="clear" />
        </div>
        <fieldset>
            <legend></legend>
            <label for="openid_username">
                @Resources.Site.OpenIdEnterYourXxx <span>Xxx</span>
            </label>
            <span></span>
            <input type="text" id="openid_username" name="openid_username" class="textbox" /><span></span>
            @*@Html.CustomValidationMessage("userName")*@
            <input type="submit" value="@Resources.Site.SiteSignin" class="button" />
            <label>
                <input id="openid_username_remember" name="openid_username_remember" type="checkbox"
                    value="true" />@Resources.Site.SiteSigninRememberMe</label>
        </fieldset>
        <fieldset>
            <legend></legend>
            <label for="openid_identifier">
                @Resources.Site.OpenIdEnterYourXxx <a class="openid_logo" href="http://openid.net">OpenID</a>
            </label>
            <div>
                <input type="text" id="openid_identifier" name="openid_identifier" class="textbox" />
                @*@Html.CustomValidationMessage("userName")*@
                <input type="submit" value="@Resources.Site.SiteSignin" class="button" />
                <label>
                    <input id="openid_identifier_remember" name="openid_identifier_remember" type="checkbox"
                        value="true" />@Resources.Site.SiteSigninRememberMe</label>
            </div>
        </fieldset>
        @*@Html.ValidationMessage("userName", new { style = "padding:0 10px" })*@
        </form>
    </div>
    <div class="divider">
    </div>
    <div class="box">
    </div>
    <div class="divider">
    </div>
    <div class="box">
    </div>
</div>
