<div class="modal-box-content">
    <div class="box">
        <form class="form" action="/" method="post">
            <h3>Signup</h3>
            <div>
                <label for="signup-username" class="label">
                    @Resources.Site.SiteSignupUserName:</label>
                <input id="signup-username" name="userName" type="text" class="textbox" />
                <span class="error"></span>
            </div>
            <div>
                <label for="signup-password" class="label">
                    @Resources.Site.SiteSignupPassword:</label>
                <input id="signup-password" name="password" type="password" class="textbox" />
                <span class="error"></span>
            </div>
            <div>
                <label for="signup-email" class="label">
                    @Resources.Site.SiteSignupEmail:</label>
                <input id="signup-email" name="email" type="text" class="textbox" />
                <span class="error"></span><span class="info">(Please use a valid email, you have to
                                               verify it later)</span>
            </div>
            <div>
                <label class="label">
                </label>
                <input type="submit" value="@Resources.Site.SiteSignup" class="button" onclick="return false;" />
            </div>
        </form>
    </div>
</div>
