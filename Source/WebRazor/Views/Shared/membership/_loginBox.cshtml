@{
    Html.Telerik().Window()
        .Name("login-box")
        .Title(@Resources.Site.SiteSigninWindowTitle)
        .Content(() => Html.RenderPartial("membership/_login"))
        .Buttons(buttons => buttons.Close())
        .Height(550)
        .Width(440)
        .Draggable(false)
        .Modal(true)
        .Visible(false)
        .Render();

    Html.Scripts()
        .OnDocumentReady("membership.init();");
}
